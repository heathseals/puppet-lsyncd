-- managed by puppet

settings = {
           logfile    = '<%= @logfile %>',
           statusFile = '<%= @statusfile %>', 
           }

sync {
    default.rsync,
    source = '<%= @sync_source %>',
    target = '<%= @sync_target %>',
<% if @lsyncd_version == "2.1" -%>
    rsync  = {
             <% if @rsh != '' -%>
             rsh = '<%=  @rsh  %>'
             <% end -%>
             <% if @excludes != '' -%>
             excludeFrom = '<%= @excludes_file %>' 
             <% end -%>
             },
             <% end -%>
<% if @lsyncd_version == "2.0" -%>
    <% if @rsyncOpts != '' -%>
    rsyncOpts   =  { '<%=  @rsyncOpts  %>'  },
    <% end -%>
    <% if @excludes != '' -%>
    excludeFrom = '<%= @excludes_file %>' 
    <% end -%>
<% end -%>
}
